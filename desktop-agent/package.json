{
  "name": "productivity-tracker-desktop",
  "version": "1.0.0",
  "description": "Desktop productivity tracker with AI classification",
  "main": "public/electron.js",
  "homepage": "./",
  "author": "BoehmTech",
  "license": "MIT",
  "private": true,
  "scripts": {
    "electron:dev": "electron .",
    "start": "react-scripts start",
    "build": "echo 'Using Netlify frontend, skipping React build'",
    "bundle-python": "pyinstaller agent.spec --clean",
    "electron:build:win": "npm run bundle-python && electron-builder --win",
    "electron:build:mac": "npm run bundle-python && electron-builder --mac",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "active-win": "^8.1.0",
    "axios": "^1.13.2",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.2.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "recharts": "^2.10.3",
    "systeminformation": "^5.21.20"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.32",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "extends": null,
    "appId": "com.boehmtech.productivity-tracker",
    "productName": "Productivity Tracker",
    "files": [
      "public/electron.js",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/agent.exe",
        "to": "agent.exe"
      },
      {
        "from": "config.json",
        "to": "config.json"
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "BoehmTech",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false,
      "signDlls": false,
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Productivity Tracker",
      "runAfterFinish": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity"
    }
  }
}
